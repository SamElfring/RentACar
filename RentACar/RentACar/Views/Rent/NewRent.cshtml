@model RentACar.Models.ViewModels.InvoiceRuleViewModel 
@{ 
        ViewData["Title"] = "Huren";
}

<div class="text-white">
    <h2>Auto huren</h2>

    <form method="post" asp-action="NewRent" asp-controller="Rent" class="text-white">
        <h4>Account aanmaken</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <label class="col-md-2" asp-for="Car"></label>
            <div class="col-md-10">
                <select asp-for="Car"
                        asp-items="@ViewBag.CarsDropdown"
                         id="newRentCarSelect"
                        class="form-control">
                    <option selected value="none">-- Selecteer auto</option>
                </select>
                <span asp-validation-for="Car" class="text-danger"></span>
            </div>
        </div>
        <script>
            document.getElementById("newRentCarSelect").value = "@ViewBag.SelectedCar";
        </script>

        <div class="form-group row">
            <label class="col-md-2" asp-for="StartDate"></label>
            <div class="col-md-10">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2" asp-for="EndDate"></label>
            <div class="col-md-10">
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 offset-md-2">
                <input type="submit" value="Huur" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>