@inject Microsoft.AspNetCore.Identity.SignInManager<RentACar.Models.ApplicationUser> signinManager

@if (signinManager.IsSignedIn(User))
{
    <li>
        <a class="text-white nav-link" asp-action="Index" asp-controller="Invoice">Facturen</a>
    </li>
    <li>
        <p class="nav-link text-white">Welkom @User.Identity.Name</p>
    </li>
    <li>
        <form asp-action="LogOff" asp-controller="Account" id="logoutForm">
            <a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Uitloggen</a>
        </form>
    </li>
}
else
{
    <li class="border" style="border-radius: 0.5rem;">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Inloggen</a>
    </li>
}